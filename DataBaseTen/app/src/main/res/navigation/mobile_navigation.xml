<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.databaseten.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_student"
        android:name="com.example.databaseten.ui.student.AddStudentFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_addstudent" />

    <fragment
        android:id="@+id/navigation_group"
        android:name="com.example.databaseten.ui.group.AddGroupFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_addgroup" />
    <fragment
        android:id="@+id/navigation_head"
        android:name="com.example.databaseten.ui.head.addHeadFragment"
        android:label="fragment_add_head"
        tools:layout="@layout/fragment_add_head" />
    <fragment
        android:id="@+id/navigation_allgroups"
        android:name="com.example.databaseten.ui.allgroups.AllGroupsFragment"
        android:label="fragment_all_groups"
        tools:layout="@layout/fragment_all_groups" />
</navigation>